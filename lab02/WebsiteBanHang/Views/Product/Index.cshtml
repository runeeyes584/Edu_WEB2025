<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Web Bán Hàng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        .card-img-top {
            width: 100%;
            height: 200px; 
            object-fit: cover;
        }
    </style>
</head>
<body>
    <header class="bg-success text-white text-center py-4">
        <h1>Trang Web Bán Hàng</h1>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
        <div class="container">
            <a class="navbar-brand" href="/">Trang Chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Product/Index">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Liên Hệ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-9">
                <a href="/Product/Add" class="btn btn-success mb-3">Thêm sản phẩm</a>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="card-text">Giá: @product.Price đ</p>
                                    <a href="/Product/Display/@product.Id" class="btn btn-primary">Chi Tiết</a>
                                    <a href="/Product/Update/@product.Id" class="btn btn-warning">Sửa</a>
                                    <form method="post" action="/Product/DeleteConfirmed/@product.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-primary text-white p-3">
                    <h5>Social Media</h5>
                    <ul class="list-unstyled">
                        <li><a href="https://www.facebook.com/HCruneeyes" class="text-white">Facebook</a></li>
                        <li><a href="https://x.com/runeeyes584" class="text-white">Twitter</a></li>
                        <li><a href="https://www.instagram.com/hcruneeyes/" class="text-white">Instagram</a></li>
                        <li><a href="images/linkedin.png" class="text-white">LinkedIn</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2025 Trang Web Bán Hàng. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
