@model WebsiteBanHang.Models.Product
<h2>Edit Product</h2>
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Single image input -->
    <div class="form-group">
        <label asp-for="ImageUrl">Image</label>
        <input type="file" asp-for="ImageUrl" class="form-control" />
    </div>

    <!-- Multiple images input -->
    <div class="form-group">
        <label for="ImageUrls">Additional Images</label>
        <input type="file" name="imageUrls" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
